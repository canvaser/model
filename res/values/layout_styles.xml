<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 比较常用的宽高 -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="nought_wrap">
        <item name="android:layout_width">@dimen/nought</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nought_match">
        <item name="android:layout_width">@dimen/nought</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_nought">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/nought</item>
    </style>

    <style name="match_nought">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nought</item>
    </style>
    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">@dimen/vertical_line</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>